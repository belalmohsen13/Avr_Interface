#include "STD_Types.h"
#include <util/delay.h>
#include <avr/io.h>

int main(void) {
	u8 i = 0;
	while (1) {

		DDRA |= (1 << i);
		PORTA |= (1 << i);
		_delay_ms(1000);
		i++;
		DDRA |= (1 << i);
		PORTA |= (1 << i);
		DDRA |= (1 << (i - 1));
		PORTA &= ~(1 << (i - 1));

		if (i == 8) {
			DDRA |= (1 << i);
			PORTA |= (1 << i);
			_delay_ms(1000);
			i--;
			DDRA |= (1 << i);
			PORTA |= (1 << i);
			DDRA |= (1 << (i - 1));
			PORTA &= ~(1 << (i - 1));
		}
	}
	return 0;
}

