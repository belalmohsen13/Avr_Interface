#include "STD_Types.h"
#include <util/delay.h>
#include <avr/io.h>

int main(void) {
	u8 i = 0;
	while (1) {

		DDRA |= (1 << i);
		PORTA |= (1 << i);
		_delay_ms(1000);
		i++;
		DDRA |= (1 << i);
		PORTA |= (1 << i);
		DDRA |= (1 << (i - 1));
		PORTA &= ~(1 << (i - 1));

		if (i == 7) {
			u8 k = 6;
			for (u8 j = 7; j <= 0; j--) {
				DDRA |= (1 << k);
				PORTA |= (1 << k);
				DDRA |= (1 << (k - 1));
				PORTA &= ~(1 << (k - 1));
				_delay_ms(1000);
			}
			i = 0;
		}
	}
	return 0;
}

