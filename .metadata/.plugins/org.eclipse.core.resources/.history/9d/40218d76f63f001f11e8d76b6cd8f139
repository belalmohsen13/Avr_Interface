#include "STD_Types.h"
#include <util/delay.h>
#include <avr/io.h>

int main(void) {
	u8 i = 0;
	u8 dir = 0;
	while (1) {
		while (dir == 0) {
			DDRA |= (1 << i);
			PORTA |= (1 << i);
			_delay_ms(1000);
			i++;
			DDRA |= (1 << i);
			PORTA |= (1 << i);
			DDRA |= (1 << (i - 1));
			PORTA &= ~(1 << (i - 1));
			if (i == 7)
				dir = 1;
		}

		while (dir == 1) {
			DDRA |= (1 << i);
			PORTA |= (1 << i);
			_delay_ms(1000);
			i--;
			DDRA |= (1 << i);
			PORTA |= (1 << i);
			DDRA |= (1 << (i + 1));
			PORTA &= ~(1 << (i + 1));
			if (i == 0)
				dir = 0;
		}
	}

	return 0;
}

